
@{
    ViewData["Title"] = "DetailProduct";
    Layout = "MyLayout";
}
@model Book

<div class="detail-container movement-container">
    <div class="row detail-info">
        <div class="col-xl-5 col-lg-5 col-md-6">
            <div class="product-img">
                <img class="d-block detail-img" src="~/Upload/images/@Model.ImageCover" alt="First slide">
            </div>
        </div>
        <div class="col-xl-7 col-lg-7 col-md-6">
            <div class="single-product-details">
                <h2>@Model.Name</h2>
                <div class="detail_price">
                    <h5>@Model.Price</h5>
                </div>
                <p>
                    <h4>Description:</h4>
                <p>
                   @Model.Description
                </p>
                <div class="buttons">
                    <div class="btn_addCart_detail">
                        <a class="btn hvr-hover" data-fancybox-close="" href="#">Add to cart</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
  
   
</div>