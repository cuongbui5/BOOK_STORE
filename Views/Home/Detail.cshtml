
@{
    ViewData["Title"] = "DetailProduct";
    Layout = "MyLayout";
}
@model Book
<div class="container">
	<div class="card-custom">
		<div class="container-fliud">
			<div class="wrapper row">
				<div class="preview col-md-6">
						
					<div class="preview-pic tab-content">
						<div class="tab-pane active" id="pic-1"><img class="img-custom" src="~/Upload/images/@Model.ImageCover" /></div>
						
					</div>
						
						
				</div>
				<div class="details col-md-6">
					<h3 class="product-title">@Model.Name</h3>
					<p class="price">price: <span>$@Model.Price</span></p>
					
					<p class="product-description">Description: @Model.Description</p>
					<p class="product-description">Author: <span>@Model.Author</span></p>
					<p class="product-description">Category: <span>@Model.Category?.Name</span></p>
					<p class="product-description">Publisher: <span>@Model.Publisher</span></p>
					<p class="product-description">Publish Date: <span>@Model.PublishDate</span></p>
						
						
					<div class="action">
						<a asp-action="CreateCartItem" asp-route-bookId="@Model.Id" asp-controller="CartItem" class="add-to-cart btn btn-default" type="button">add to cart</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


@section Scripts{
	<script>
        var errorMessage = '@TempData["ErrorMessage"]' || '';
		var successMessage = '@TempData["SuccessMessage"]' || '';
        if (errorMessage) {
           alert(errorMessage)
           @TempData.Remove("ErrorMessage");
        }
		if (successMessage){
			alert(successMessage)
            @TempData.Remove("SuccessMessage");
		}
    </script>
}

