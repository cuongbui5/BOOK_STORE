@{
    ViewData["Title"] = "Home Page";
    Layout = "MyLayout";
}
@model BOOK_STORE_DEMO.Dtos.Response.BookResponse

<div>
    <div class="filter-container">
        
        @await Component.InvokeAsync("RenderCategory")
    </div>

    <div class="row">
        @if (Model.Books.Count() == 0)
        {
            <div class="col-12">
                <p>Not Found Book</p>
            </div>
        }
        else
        {
            @foreach (var book in Model.Books)
            {
                <div class="col-3">
                    <div class="card my-2 store-card">
                        <a class="a-cleanup" asp-controller="Home" asp-action="Detail" asp-route-bookId="@book.Id">
                            <div class="ImageBlock">
                                <img src="~/Upload/images/@book.ImageCover" class="card-img-top card-img-custom">
                            </div>
                            <div class="card-body" style="height: 6em;">
                                <h5 class="mb-3">@book.Name</h5>
                            </div>
                            <div class="card-body">
                                <span class="card-text">$@book.Price</span>
                            </div>
                           
                        </a>
                    </div>
                </div>
            }
        }
    </div>

    <div>
      <nav aria-label="Page navigation example">
          <ul class="pagination">
             @foreach (var i in Enumerable.Range(1, Model.TotalPages))
             {
                 <li class="page-item @(Model.CurrentPage == i ? "active" : "") li-page" id="@i">
                     <a class="page-link">@i</a>
                 </li>
             }
              
          </ul>
      </nav>
    </div>
</div>

@section Scripts {
    <script>
        var categoryId=0;
        var page=1;
        $(".li-category-id").click(function (e) {
           categoryId = $(this).attr("id");

           $.ajax({
             url: "BooksByCategoryAndPagination",
             data: {categoryId,page} ,
             success: function (response) {
                 $("div.row").html(response);
             }
            });
        });
        
          $(".li-page").click(function (e) {
                   page = $(this).attr("id");
                   $(".li-page").removeClass("active");
                    $(this).addClass("active");
        
                   $.ajax({
                     url: "BooksByCategoryAndPagination",
                     data: {categoryId,page} ,
                     success: function (response) {
                         $("div.row").html(response);
                     }
                    });
                });
        
    </script>
}