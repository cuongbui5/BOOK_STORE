

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
    string message = ViewBag.Message;
}
@model BOOK_STORE_DEMO.Dtos.Request.LoginRequest

<div class="container">

        
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9" style="margin-top: 125px;">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                                    </div>
                                    <form class="user" asp-controller="Auth" asp-action="Login" method="post">
                                        <div class="form-group">
                                            <input asp-for="Username" type="email" class="form-control form-control-user"
                                                id="exampleInputEmail" aria-describedby="emailHelp"
                                                placeholder="Enter Email Address...">
                                        </div>
                                        <div class="form-group">
                                            <input asp-for="Password" type="password" class="form-control form-control-user"
                                                   id="exampleInputPassword" placeholder="Password">
                                        </div>
                                        @if (!string.IsNullOrEmpty(message))
                                           {
                                               <div class="alert alert-danger">
                                                   @message
                                               </div>
                                           }
                                      
                                        <button type="submit" class="btn btn-primary btn-user btn-block">
                                                                      Login
                                        </button>
                                       
                                    </form>
                                    <hr>
                                   
                                    <div class="text-center">
                                        <a class="small"  href="@Url.Action("Register", "Auth")">Create an Account!</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>
