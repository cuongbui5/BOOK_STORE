@{
}
@model IEnumerable<OrderItem>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Stt</th>
            <th>Book name</th>
            <th>Book image</th>
            <th>Quantity</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 1;
        }
        @foreach (OrderItem orderItem in Model)
        {
            <tr>
                <td>@i</td>
                <td>@orderItem.Book.Name</td>
                <td><img src="~/Upload/images/@orderItem.Book.ImageCover" style="width:100px;height:100px;object-fit:cover" alt="book's cover image"/></td>
                <td>@orderItem.Quantity</td>
                <td>@orderItem.Price</td>
            </tr>
            i += 1;
        }
    </tbody>
</table>
<a class="btn btn-primary" asp-controller="Admin" asp-action="Order" style="border-radius: 8px">Back</a>