<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/bookstore.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/font-awesome/css/all.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/bootstrap/bootstrap.css/bootstrap.min.css" />
</head>
<body>
    <header class="header_section long_section px-0">
        <div>
            <nav class="navbar navbar-expand-lg custom_nav-container ">
                <a class="navbar-brand" href="index.html">
                    <span>
                        Edgecut
                    </span>
                </a>
                <div class="pages d-flex align-items-center justify-content-center">
                    <ul class="navbar-nav  ">
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="Home" class="nav-link">Store</a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="Cart" class="nav-link">Cart</a>
                        </li>
                    </ul>
                </div>
                <div class="navbar-pages-tool" id="navbarSupportedContent">
                    <div class="quote_btn-container">
                        <div class="box">
                            <input type="checkbox" id="check" />
                            <div class="search-box">
                                <input type="text" placeholder="Search here...." />
                                <label for="check" class="icon">
                                    <i class="fas fa-search"></i>
                                </label>
                            </div>
                        </div>
                        <a href="">
                            <i class="fa fa-user" aria-hidden="true"></i>
                        </a>
                        <div class="iconCart">
                            <button class="btn  my-2 my-sm-0 nav_search-btn">
                                <i class="fa-solid fa-cart-shopping"></i>
                                <div class="totalQuantity">0</div>
                            </button>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
            <div class="main-cart">
                <h2>
                    CART
                </h2>

                <div class="listCart">
                    <div class="item">
                        <img src="~/Image/book_1.jpg">
                        <div class="content">
                            <div class="name">CoPilot / Black / Automatic</div>
                            <div class="price">$550 / 1 product</div>
                        </div>
                        <div class="quantity">
                            <button>-</button>
                            <span class="value">3</span>
                            <button>+</button>
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/Image/book_1.jpg">
                        <div class="content">
                            <div class="name">CoPilot / Black / Automatic</div>
                            <div class="price">$550 / 1 product</div>
                        </div>
                        <div class="quantity">
                            <button>-</button>
                            <span class="value">3</span>
                            <button>+</button>
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/Image/book_1.jpg">
                        <div class="content">
                            <div class="name">CoPilot / Black / Automatic</div>
                            <div class="price">$550 / 1 product</div>
                        </div>
                        <div class="quantity">
                            <button>-</button>
                            <span class="value">3</span>
                            <button>+</button>
                        </div>
                    </div>
                </div>

                <div class="buttons">
                    <div class="close">
                        CLOSE
                    </div>
                    <div class="checkout">
                        <a asp-action="Index" asp-controller="Cart" class="nav-link">CHECKOUT</a>
                    </div>
                </div>
            </div>
        </main>
    </div>
    <footer class="footer">
        <div class="footer-container">
            <div class="footer-row">
                <div class="footer-col">
                    <h4>company</h4>
                    <ul>
                        <li><a href="#">about us</a></li>
                        <li><a href="#">our services</a></li>
                        <li><a href="#">privacy policy</a></li>
                        <li><a href="#">affiliate program</a></li>
                    </ul>
                </div>
                <div class="footer-col">
                    <h4>get help</h4>
                    <ul>
                        <li><a href="#">FAQ</a></li>
                        <li><a href="#">shipping</a></li>
                        <li><a href="#">returns</a></li>
                        <li><a href="#">order status</a></li>
                        <li><a href="#">payment options</a></li>
                    </ul>
                </div>
                <div class="footer-col">
                    <h4>online shop</h4>
                    <ul>
                        <li><a href="#">watch</a></li>
                        <li><a href="#">bag</a></li>
                        <li><a href="#">shoes</a></li>
                        <li><a href="#">dress</a></li>
                    </ul>
                </div>
                <div class="footer-col">
                    <h4>follow us</h4>
                    <div class="social-links">
                        <a href="#"><i class="fab fa-facebook-f"></i></a>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/app.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>