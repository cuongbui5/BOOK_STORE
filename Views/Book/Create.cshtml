@{
}
@model Book
@section Create {
    <link rel="stylesheet" href="~/assets/css/vertical-layout-light/create.css" />
}
    <div asp-validation-summary="All" class="text-danger"></div>
    <h2>Add Book</h2>
    <form asp-controller="Book" asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="imgFile" class="form-label">Upload Image Book</label>
        <input type="file" class="form-control" id="imgFile" name="imgFile" onchange="chooseFile(this)" />
        </div>

    <div style="margin-top:7px" class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
            <img id="image" style="width:200px;height:280px;object-fit:cover" src="" />
        </div>
    </div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name" type="text" class="form-control" id="book">
        </div>

        <div class="mb-3">
        <label asp-for="Price" class="form-label">Price</label>
        <input asp-for="Price" type="number" class="form-control" id="price">
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" type="text" class="form-control" id="description"></textarea>
        </div>

        <div class="mb-3">
            <label asp-for="Author" class="form-label">Author</label>
        <input asp-for="Author" type="text" class="form-control" id="author">
        </div>

        <div class="mb-3">
            <label asp-for="CategoryId" class="form-label">Category</label>
            <select asp-for="CategoryId" class="form-select" aria-label="Default select example" id="category">
                <option selected>Choose this category menu</option>
            @foreach (var category in ViewBag.Categories)
            {
                <option value="@category.Value">@category.Text</option>
            }
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="PublishDate" class="form-label">Date</label>
            <input asp-for="PublishDate" type="date" class="form-control" id="date">
        </div>

        <div class="mb-3">
            <label asp-for="Publisher" class="form-label">Publisher</label>
            <input asp-for="Publisher" type="text" class="form-control" id="publisher">
        </div>

        <div style="margin-top:20px" class="form-group row">
            <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-controller="Book" asp-action="ListBook" class="btn btn-primary" style="margin-left:10px">List Book</a>
            </div>
        </div>
    </form>



@section Scripts{
    <script>
        function chooseFile(fileInput) {
            if (fileInput.files && fileInput.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $("#image").attr("src", e.target.result)
                }
                reader.readAsDataURL(fileInput.files[0])
            }
        }
    </script>
 }


